<style>
    #paymentInfoAccounts {
        max-width: 800px;
        border: 1px solid #eee;
        border-radius: 3px;
        margin: 10px auto;
        padding: 20px;
    }

        #paymentInfoAccounts > div.row > div {
            padding-right: 0px;
        }

        #paymentInfoAccounts > div.row {
            font-size: 14px;
            padding-top: 5px;
            padding-bottom: 5px;
            letter-spacing: 0.4px;
        }

        #paymentInfoAccounts strong {
            font-size: 14px !important;
        }

    #paymentInfoAccountsForEachTitle {
        margin-top: 20px;
    }

    #paymentInfoAccountsForEach > div {
        font-size: 15px !important;
        margin: 5px 0;
    }

    .bankTextRight, .bankTitleTextRight {
        text-align: right;
    }

    .bankTitleTextLeft {
        text-align: left;
    }

    @@media screen and (max-width:426px) {
        #paymentInfoAccounts {
            display: flex;
            flex-direction: column;
        }
    }
</style>
<div class="title">
    <h2>@T("Plugin.Payment.Transfer.InstructionTransferTitle")</h2>
    <br />
    <strong>@T("Plugin.Payment.Transfer.AccountTitle")</strong>
    <div class="title">
        <strong><small style="color:#ff4f60;">@T("Payment.PartialPayment")</small></strong>
    </div>
</div>
