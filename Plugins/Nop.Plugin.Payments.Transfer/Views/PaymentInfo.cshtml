<div id="paymentInfoAccounts">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-6 bankTitleTextRight">
                    <strong>@T("Plugin.Payment.Transfer.NameTitle"):</strong>
                </div>
                <div class="col-6 bankTitleTextLeft">
                    <label>@T("Plugin.Payment.Transfer.ValueName")</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-6 bankTitleTextRight">
                    <strong>@T("Plugin.Payment.Transfer.RIFTitle"):</strong>
                </div>
                <div class="col-6 bankTitleTextLeft">
                    <label>@T("Plugin.Payment.Transfer.ValueRIF")</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-6 bankTitleTextRight">
                    <strong>@T("Plugin.Payment.Transfer.AccountTypeTitle"):</strong>
                </div>
                <div class="col-6 bankTitleTextLeft">
                    <label>@T("Plugin.Payment.Transfer.ValueAccountType")</label>
                </div>
            </div>
        </div>
    </div>
    <div id="paymentInfoAccountsForEachTitle">
        <div class="order-total row">
            <div class="col-6">
                <h3 class="bankTextRight" asp-for="BancoReceptor">@T("Plugin.Payment.Transfer.BankTitle")</h3>
            </div>
            <div class="col-6">
                <h3>@T("Plugin.Payment.Transfer.AccountNumberTitle")</h3>
            </div>
        </div>
    </div>
    <div class="row" id="paymentInfoAccountsForEach">
        @foreach (var bank in Model.BancoReceptor)
        {
            <div class="col-12">
                <div class="row">
                    <div class="col-6 bankTextRight">
                        <strong>@bank.Text:</strong>
                    </div>
                    <div class="col-6">
                        <label>@bank.Value</label>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

